global
    log /dev/log    local0
    maxconn 2048
    daemon

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5s
    timeout client  50s
    timeout server  50s

frontend balancer
    bind :60000-65000
    default_backend webservers

backend webservers
    balance roundrobin
    cookie SERVERID insert indirect nocache
    option httpchk GET /
    http-request set-header X-Forwarded-For %[src]

    server web_a 54.191.190.151:80 check cookie web_a
    server web_b 34.221.22.164:80 check cookie web_b
